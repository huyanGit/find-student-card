extends ../layout
block content
  ._table
    table(class="table table-striped _table")
      thead
        tr
          th 卡号
          th 发布时间
          th 丢失地点
      tbody
        if lostedcards && lostedcards.length > 0
          each card in lostedcards          
            tr
              td #{card.cardid}
              td #{moment(card.create_at).format('YYYY-MM-DD')}
              td #{card.lostedplace}
  .pagination
    button.btn.btn-default.prev 上一页
    button.btn.btn-default.next 下一页
    span.curr 1/
    span.max_no