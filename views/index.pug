doctype
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title 校园卡招领
    link(href="/css/bootstrap.min.css",rel="stylesheet")
    link(href="/css/style.css",rel="stylesheet")
  body
    .container
      .header
        .title
          h1 校园卡招领
            small 合肥工业大学宣城校区
        ._form
          form
            .form-group
              input(type="text", name="search", class="form-control", placeholder="请输入学号", id="search")
              button(type="submit" class="btn btn-default" id="_button") 搜索
        .clear
      ._table
        table(class="table table-striped _table")
          thead
            tr
              th 序号
              th 卡号
              th 发布时间
              th 丢失地点
          tbody
            if lostedcards && lostedcards.length > 0
              each card in lostedcards          
                tr
                  td #{card.num}
                  td #{card.cardid}
                  td #{moment(card.create_at).format('YYYY/MM/DD')}
                  td #{card.lostedplace}
      .pages
        nav(aria-label="Page navigation")
          ul(class="pagination pagination-lg")
            li
              a(href="#" aria-label="Previous")
                span(aria-hidden="true") &laquo;
            li
              a(href="#") 1
            li
              a(href="#") 2
            li
              a(href="#") 3
            li
              a(href="#" aria-label="Next")
                span(aria-hidden="true") &raquo;
    .footer
      span 合肥工业大学宣城校区
      span 信息工程系
      span Copyright © 2017
    script(src="/js/jquery-1.11.1.min.js")    
    script(src="/js/script.js")